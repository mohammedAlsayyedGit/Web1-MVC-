<!-- Swiper JS -->






@section Scripts {
    <script>
        var x = new Swiper(".mySwiper", {


            pagination: {
                el: ".swiper-pagination",
                clickable: true,
            },
            navigation: {
                nextEl: ".swiper-next",
                prevEl: ".swiper-pre",
            },
            // Default parameters
            slidesPerView: 1,
            spaceBetween: 10,
            // Responsive breakpoints
            breakpoints: {
                // when window width is >= 320px
                500: {
                    slidesPerView: 2,
                    spaceBetween: 10,
                },
                // when window width is >= 480px
                850: {
                    slidesPerView: 3,
                    spaceBetween: 10,
                },
                // when window width is >= 640px
                950: {
                    slidesPerView: 4,
                    spaceBetween: 10,
                },
            },
        });
    </script>
}





















